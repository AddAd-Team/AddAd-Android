<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/colorTopBlack">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_visit_profile_feed_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="16dp"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_visit_profile_feed_gl_middle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/colorMiddleBlack">

            <ImageView
                android:id="@+id/item_visit_profile_feed_image"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_sample_feed"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/item_visit_profile_feed_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="아이패드프로 4세대(광고)"
        android:textColor="@color/colorOrange"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/item_visit_profile_feed_end_date_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_visit_profile_feed_gl_middle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_visit_profile_feed_end_date_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="마감일 : 9월 30일"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/item_visit_profile_feed_tag_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_visit_profile_feed_gl_middle"
        app:layout_constraintTop_toBottomOf="@+id/item_visit_profile_feed_title_tv" />

    <TextView
        android:id="@+id/item_visit_profile_feed_tag_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="#다이어트 #식품 #아우라지 #광고입문 #사용기 #블로그"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_visit_profile_feed_gl_middle"
        app:layout_constraintTop_toBottomOf="@+id/item_visit_profile_feed_end_date_tv" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_visit_profile_feed_gl_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>