<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTopBlack">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView10"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="300dp"
        app:layout_constraintBottom_toTopOf="@+id/feed_placeholder_image"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@+id/item_feed_placeholder_gl_left"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView11"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/feed_placeholder_image"
        app:layout_constraintStart_toEndOf="@+id/cardView10"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/feed_placeholder_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView10" />

    <androidx.cardview.widget.CardView
        android:id="@+id/feed_placeholder_price_tv"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/item_feed_placeholder_gl_left"
        app:layout_constraintTop_toBottomOf="@+id/feed_placeholder_image" />

    <androidx.cardview.widget.CardView
        android:id="@+id/feed_placeholder_end_date_tv"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/item_feed_placeholder_gl_left"
        app:layout_constraintTop_toBottomOf="@+id/feed_placeholder_price_tv" />

    <androidx.cardview.widget.CardView
        android:id="@+id/feed_placeholder_remain_date_tv"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/feed_placeholder_end_date_tv"
        app:layout_constraintStart_toEndOf="@+id/feed_placeholder_end_date_tv"
        app:layout_constraintTop_toTopOf="@+id/feed_placeholder_end_date_tv" />

    <androidx.cardview.widget.CardView
        android:id="@+id/feed_placeholder_hashtag_tv"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/item_feed_placeholder_gl_left"
        app:layout_constraintTop_toBottomOf="@+id/feed_placeholder_end_date_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorDarkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feed_placeholder_hashtag_tv" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_feed_placeholder_gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_feed_placeholder_gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_feed_placeholder_gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

</androidx.constraintlayout.widget.ConstraintLayout>